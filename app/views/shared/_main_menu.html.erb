<%= link_to root_path, class: "btn btn-lg btn-default", title: "Bizuuus" do %>
  <span class="glyphicon glyphicon-th-list"></span>
<% end %>

<% if user_signed_in? %>
  <%= link_to profile_path(current_user), class: "btn btn-lg btn-default", title: "Perfil" do %>
    <span class="glyphicon glyphicon-user"></span>
  <% end %>
  <%= link_to new_story_path, class: "btn btn-lg btn-default", title: "Novo Bizuuu!!!" do %>
    <span class="glyphicon glyphicon-bullhorn"></span>
  <% end %>
  <%= link_to destroy_user_session_path, class: "btn btn-lg btn-default", title: "Sair", :method => :delete do %>
    <span class="glyphicon glyphicon-off"></span>
  <% end %>
<% else %>
  <%= link_to new_user_session_path, class: "btn btn-lg btn-default", title: "Entrar" do %>
    <span class="glyphicon glyphicon-user"></span>
  <% end %>
<% end %>
